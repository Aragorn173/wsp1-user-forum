{% extends "layout.njk" %}
{% block content %}
    <div class="cardpadding text_color">
        <div class="card" style="width: 100%;">
            <h5>{{ post.username }}</h5>
            <div class="card-body">
                <h5 class="card-title">
                    {{ post.title | safe}}</h5>
                <p class="card-text">
                    {{ post.content | safe}}</p>
                <a href="#" class="btn btn-primary">Comment</a>
            </div>
            <p>{{ post.createdAt }}</p>
        </div>
    </div>
{% endblock %}